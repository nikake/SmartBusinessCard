<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:constantSize="true"
    android:dither="true"
    android:variablePadding="false"
    android:visible="true">
    <item android:state_pressed="false" android:drawable="@color/button" />
    <item android:state_pressed="true" android:drawable="@color/buttonPressed" />

    <!-- If button is disabled, make it gray. -->
    <item android:state_enabled="false" android:drawable="@color/gray"/>
</selector>