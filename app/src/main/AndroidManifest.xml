<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="niklaskerlund.smartbusinesscard">

    <uses-sdk android:minSdkVersion="13"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".activities.SmartBusinessCardApplication">
        <activity android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity android:name=".activities.CreateAccountActivity">
            
        </activity>

        <activity android:name=".activities.UpdateProfileActivity"
            android:label="@string/new_profile"
            android:parentActivityName=".activities.LoginActivity">

        </activity>

        <activity android:name=".activities.ViewContactActivity"></activity>
        <activity android:name=".activities.ViewConferenceActivity"></activity>
    </application>

</manifest>
